  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole",
      "justMyCode": true
    },
    {
      "name": "Python: viewer",
      "type": "python",
      "request": "launch",
      "module": "viewer",
      "cwd":"${workspaceFolder}",
      "console": "internalConsole",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "env": {
          "PYTHONPATH": "${workspaceFolder};${PYTHONPATH}"
      }
    }
  ]
}
